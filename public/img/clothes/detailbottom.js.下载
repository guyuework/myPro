$(document).ready(function(){$("body").delegate(".slidelist ul li","click",function(b){b.preventDefault();var c=$(this);a.changePic(c)});$("body").delegate(".photo-viewer .close","click",function(c){c.preventDefault();var d=$(this);d.closest(".photo-viewer").hide();var b=d.closest(".shaidan-wrap").find(".slidelist ul li");if(b.hasClass("selected")){b.removeClass("selected")}});$("body").delegate(".photo-viewer .operate","click",function(b){b.preventDefault();var c=$(this);c.closest(".markbg").fadeOut(400)});$("body").delegate(".comments-prevbtn","click",function(){var b=$(this);a.changeList(0,b)});$("body").delegate(".comments-nextbtn","click",function(){var b=$(this);a.changeList(1,b)});$("body").delegate(".cursor-left","click",function(){var b=$(this);a.loadBigPic(0,b)});$("body").delegate(".cursor-right","click",function(){var b=$(this);a.loadBigPic(1,b)});var a={changeList:function(m,l){var h=l.closest(".comments-showimgwrap").find(".slidelist ul");var q=h.find("li");var g=parseInt(h.attr("data-curpage"));var j=Math.ceil(q.length/12);var i=l.closest(".shaidan-wrap").find(".photo-viewer");var b=i.find(".photo-img");var s=i.find(".markbg");var d=i.find(".com-con");if(m===0){g--;if(g<1){g=1;return false}h.attr("data-curpage",g)}else{g++;if(g>j){g=j;return false}h.attr("data-curpage",g)}var p=q.length;if(p>12){var o=1080;var r=(g-1)*o;h.animate({marginLeft:-r},400);q.removeClass("selected");if(i.css("display")!="none"){var c=12*(g-1);q.eq(c).addClass("selected");var k=q.eq(c).find("img").attr("data-img");var e=q.eq(c).find("img").attr("data-content");b.attr("src",k)}if(s.css("display")!="none"){d.html(e)}}},loadBigPic:function(p,m){var i=m.closest(".shaidan-wrap").find(".slidelist ul");var q=i.find("li");var s=i.find(".selected img");var k=m.closest(".photo-viewer");var b=k.find(".photo-img");var t=k.find(".markbg");var e=k.find(".com-con");if(s.attr("data-img")===b.attr("src")){var r=parseInt(s.attr("data-imgnum"));var h=parseInt(i.attr("data-curpage"));if(p===0){r--;var d=12*(h-1);var o=q.eq(d).hasClass("selected");if(o){var g=m.closest(".shaidan-wrap").find(".comments-prevbtn");a.changeList(0,g)}}else{r++;var d=12*(h-1)+11;var o=q.eq(d).hasClass("selected");if(o){var j=m.closest(".shaidan-wrap").find(".comments-nextbtn");a.changeList(1,j)}}i.find(".imgnum"+r).closest("li").addClass("selected").siblings().removeClass("selected");var l=i.find(".imgnum"+r).attr("data-img");var f=i.find(".imgnum"+r).attr("data-content");b.attr("src",l);if(t.css("display")!="none"){e.html(f)}}},changePic:function(h){var d=h.find("img").attr("data-img");var b=h.find("img").attr("data-content");var g=h.closest(".shaidan-wrap").find(".photo-viewer");var e=g.find(".photo-img");var c=g.find(".markbg");var f=g.find(".com-con");if(h.hasClass("selected")){h.removeClass("selected");g.hide()}else{h.addClass("selected").siblings().removeClass("selected");e.attr("src",d);if(c.css("display")!="none"){f.html(b)}if(g.css("display")==="none"){g.show()}}}}});