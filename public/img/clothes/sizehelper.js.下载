jQuery(document).ready(function(a){a(".weight,.height").focus(function(b){a(this).addClass("blueborder")}).blur(function(b){a(this).removeClass("blueborder")});a(".weight").keyup(function(d){var e=a(this).val();var b=a(this).closest("table").find(".height").val();var f=a("#productid").val();var c={};c={sku:f,height:b,weight:e};if(e>=2){a.ajax({url:"/ajax/detail/getComSizeMeasure",type:"GET",dataType:"json",data:c}).done(function(i){if(i.rs_code>0){var g="";g+='<div class="sizetuijian"></div>';a(".sizetuijian").remove();a("#"+i.rs_msg).append(g);var h=a("[size='"+i.rs_msg+"']").eq(0).css("background-color");a(".sizehelperth").text("推荐尺码：");a(".sizetj").html('<span style="background-color:'+h+'">'+i.rs_msg+"</span>");a(".weight").val(e);a(".height").val(b)}else{a(".sizehelperth").text("推荐：");a(".sizetj").text("未找到合适尺码").css("color","#d70057")}})}});a(".height").keyup(function(d){var b=a(this).val();var e=a(this).closest("table").find(".weight").val();var f=a("#productid").val();var c={};c={sku:f,height:b,weight:e};if(e>=3){a.ajax({url:"/ajax/detail/getComSizeMeasure",type:"GET",dataType:"json",data:c}).done(function(i){if(i.rs_code>0){var g="";g+='<div class="sizetuijian"></div>';a("#"+i.rs_msg).append(g);var h=a("[size='"+i.rs_msg+"']").eq(0).css("background-color");a(".sizehelperth").text("推荐尺码：");a(".sizetj").html('<span style="background-color:'+h+'">'+i.rs_msg+"</span>");a(".weight").val(e);a(".height").val(b)}else{a(".sizehelperth").text("推荐：");a(".sizetj").text("未找到合适尺码").css("color","#d70057")}})}})});