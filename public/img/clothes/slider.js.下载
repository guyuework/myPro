(function(a){a.fn.Slider=function(b){var c={prevId:"prevBtn",nextId:"nextBtn",controlsShow:true,controlsBefore:"",controlsAfter:"",controlsFade:true,vertical:false,speed:800,auto:false,pause:2000,continuous:false,offbtnleft:"",offbtnright:"",offline:1,shownum:0,rows:1};if(!a("div").hasClass("temaiRight")){c.speed=800}else{c.speed=0}var b=a.extend(c,b);this.each(function(){var m=b.offline;var e=a(this);var l=a("ul",e).length;var j=a("ul",e).width();var f=a("li",e).height();var g=l%m;if(g!=0){g=parseInt((l/m))}else{g=parseInt((l/m))-1}var k=0;if(!b.vertical){a("ul",e).css("width",j)}a(b.nextId).click(function(){d("next",true);if(a("div").hasClass("temaiRight")){var o=a("#teImgUl_1").height()+200;var n=a("#teImgUl_2").height()+200;var h=a("#teImgUl_3").height()+200;if(a("a").hasClass("off_temaiA_1")){a(".temaiRightcont").css("height",o)}else{if(a("a").hasClass("off_temaiA_2")){a(".temaiRightcont").css("height",h)}else{a(".temaiRightcont").css("height",n)}}}});a(b.prevId).click(function(){d("prev",true);if(a("div").hasClass("temaiRight")){var o=a("#teImgUl_1").height()+200;var n=a("#teImgUl_2").height()+200;var h=a("#teImgUl_3").height()+200;if(a("a").hasClass("off_temaiA_1")){a(".temaiRightcont").css("height",o)}else{if(a("a").hasClass("off_temaiA_2")){a(".temaiRightcont").css("height",h)}else{a(".temaiRightcont").css("height",n)}}}});function d(h,n){var o=k;switch(h){case"next":k=(o>=g)?(b.continuous?0:g):k+1;break;case"prev":k=(k<=0)?(b.continuous?g:0):k-1;break;case"first":k=0;break;case"last":k=g;break;default:break}var r=Math.abs(o-k);var q=r*b.speed;if(!b.vertical){p=(k*j*-1);e.animate({marginLeft:m*p},q)}else{p=(k*f*-1);e.animate({marginTop:m*p},q)}if(!b.continuous&&b.controlsFade){if(k==g){a(b.nextId).addClass(b.offbtnright)}else{a(b.nextId).removeClass(b.offbtnright)}if(k==0){a(b.prevId).addClass(b.offbtnleft)}else{a(b.prevId).removeClass(b.offbtnleft)}}if(n){clearTimeout(i)}if(b.auto&&h=="next"&&!n){i=setTimeout(function(){d("next",false)},r*b.speed+b.pause)}}var i;if(b.auto){i=setTimeout(function(){d("next",false)},b.pause)}if(!b.continuous&&b.controlsFade){a(b.prevId).addClass(b.offbtnleft)}if(k==g){a(b.nextId).addClass(b.offbtnright)}})}})(jQuery);